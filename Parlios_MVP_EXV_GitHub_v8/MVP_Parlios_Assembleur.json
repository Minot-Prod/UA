        "type": "array",
        "valeurs": [
          "site",
          "IG",
          "FB",
          "LinkedIn",
          "bouche-à-oreille"
        ],
        "min_items": 1,
        "requis": true
      },
      {
        "champ": "contraintes",
        "type": "string",
        "max": 200,
        "requis": false
      },
      {
        "champ": "email",
