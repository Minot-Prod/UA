  "bibliotheque_io": {
    "inputs": {
      "persona": {
        "type": "enum",
        "values": [
          "Alexandre",
          "Sophie",
          "Marc",
          "Julie"
        ],
        "i18n_key": "input.persona.label",
        "required": true
      },
      "secteur": {
        "type": "string",
        "min": 3,
        "max": 40,
        "pattern": "^[\\p{L}0-9 &\\-\\/',\\.]{3,40}$",
        "placeholder": "ex: coiffure, tattoo, coaching…",
        "i18n_key": "input.secteur.label",
        "required": true
      },
      "objectif_prioritaire": {
        "type": "enum",
        "values": [
          "1er client",
          "visibilité",
          "structuration",
          "équilibre temps"
        ],
        "i18n_key": "input.objectif.label",
        "required": true
      },
      "niveau": {
        "type": "enum",
        "values": [
          "début",
          "intermédiaire",
          "avancé"
        ],
        "i18n_key": "input.niveau.label",
        "required": true
      },
      "canaux": {
        "type": "array",
        "values": [
          "site",
          "IG",
          "FB",
          "LinkedIn",
          "bouche-à-oreille"
        ],
        "min_items": 1,
        "i18n_key": "input.canaux.label",
        "required": true
      },
      "contraintes": {
        "type": "string",
        "max": 200,
        "i18n_key": "input.contraintes.label",
        "required": false
      },
      "email": {
        "type": "email",
        "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
        "i18n_key": "input.email.label",
        "required": false
      },
      "date_range": {
        "type": "object",
        "fields": {
          "start": "ISO8601",
          "end": "ISO8601"
        },
        "i18n_key": "input.date_range.label",
        "required": false
      }
    },
    "outputs": {
      "pdf_export": {
        "type": "file",
        "format": "PDF/A-1b",
        "filename_template": "parlios_${module}_${date}.pdf"
      },
      "notion_block": {
        "type": "object",
        "schema": "notion.paragraph[]",
        "notes": "créé si connecteur Notion actif"
      },
      "ics_calendar": {
        "type": "file",
        "format": "text/calendar",
        "filename_template": "parlios_${module}_${date}.ics"
      },
      "csv_export": {
        "type": "file",
        "format": "text/csv",
        "delimiter": ",",
        "encoding": "utf-8"
      },
      "kpi_object": {
        "type": "object",
        "schema": {
          "ttv_seconds": "number",
          "estimated_hours_saved": "number"
        }
      }
    },
    "errors": {
      "required": {
        "code": "E_REQUIRED",
        "message_key": "error.required"
      },
      "pattern": {
        "code": "E_PATTERN",
        "message_key": "error.pattern"
      },
      "email": {
        "code": "E_EMAIL",
        "message_key": "error.email"
      },
      "timeout": {
        "code": "E_TIMEOUT",
        "message_key": "error.timeout",
        "fallback": "gabarit_minimal"
      }
    },
    "i18n": {
      "default_locale": "fr",
      "fallback_locale": "en",
      "namespaces": [
        "common",
        "inputs",
        "errors",
        "modules"
      ]
    }
  },
