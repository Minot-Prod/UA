{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Output",
  "type": "object",
  "required": [
    "status",
    "artifacts",
    "summary"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "WARN",
        "FAIL"
      ]
    },
    "summary": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metrics": {
      "type": "object"
    }
  }
}