{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Parlios MVP Assembleur — Étape 10 (security_consent)",
  "type": "object",
  "required": [
    "security_consent"
  ],
  "properties": {
    "security_consent": {
      "type": "object",
      "required": [
        "version",
        "policy",
        "ui",
        "storage"
      ],
      "properties": {
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "policy": {
          "type": "object",
          "required": [
            "retention_days",
            "cookie_defaults",
            "scopes"
          ],
          "properties": {
            "retention_days": {
              "type": "integer",
              "minimum": 1
            },
            "cookie_defaults": {
              "type": "object",
              "required": [
                "sameSite",
                "secure",
                "httpOnly_for_session",
                "expires_days"
              ],
              "properties": {
                "sameSite": {
                  "type": "string",
                  "enum": [
                    "Lax",
                    "Strict",
                    "None"
                  ]
                },
                "secure": {
                  "type": "boolean"
                },
                "httpOnly_for_session": {
                  "type": "boolean"
                },
                "expires_days": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            },
            "scopes": {
              "type": "object",
              "required": [
                "analytics",
                "ai",
                "session",
                "security"
              ],
              "properties": {
                "analytics": {
                  "$ref": "#/$defs/scopeDef"
                },
                "ai": {
                  "$ref": "#/$defs/scopeDef"
                },
                "session": {
                  "$ref": "#/$defs/scopeDef"
                },
                "security": {
                  "$ref": "#/$defs/scopeDef"
                }
              }
            }
          }
        },
        "ui": {
          "type": "object",
          "required": [
            "banner",
            "modal"
          ],
          "properties": {
            "banner": {
              "type": "object",
              "required": [
                "text",
                "actions"
              ],
              "properties": {
                "text": {
                  "type": "string"
                },
                "actions": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "accept_all",
                      "reject_all",
                      "customize"
                    ]
                  },
                  "minItems": 3
                }
              }
            },
            "modal": {
              "type": "object",
              "required": [
                "title",
                "sections",
                "links"
              ],
              "properties": {
                "title": {
                  "type": "string"
                },
                "sections": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "id",
                      "title",
                      "content"
                    ],
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "content": {
                        "type": "string"
                      }
                    }
                  },
                  "minItems": 3
                },
                "links": {
                  "type": "object",
                  "required": [
                    "privacy_policy_url",
                    "legal_notice_url"
                  ],
                  "properties": {
                    "privacy_policy_url": {
                      "type": "string"
                    },
                    "legal_notice_url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "storage": {
          "type": "object",
          "required": [
            "mechanism",
            "key",
            "expires_days"
          ],
          "properties": {
            "mechanism": {
              "type": "string",
              "enum": [
                "localStorage"
              ]
            },
            "key": {
              "type": "string"
            },
            "expires_days": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  },
  "$defs": {
    "scopeDef": {
      "type": "object",
      "required": [
        "description",
        "legal_basis",
        "opt_in_required",
        "default_state"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "legal_basis": {
          "type": "string",
          "enum": [
            "consent",
            "contract",
            "legitimate_interest"
          ]
        },
        "opt_in_required": {
          "type": "boolean"
        },
        "default_state": {
          "type": "string",
          "enum": [
            "on",
            "off"
          ]
        }
      }
    }
  }
}