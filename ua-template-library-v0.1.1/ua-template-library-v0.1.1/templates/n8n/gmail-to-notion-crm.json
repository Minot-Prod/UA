{
  "name": "Gmail(label)â†’Notion Tasks",
  "nodes": [
    {
      "parameters": {
        "triggerOn": "label",
        "label": "To-N8N"
      },
      "type": "n8n-nodes-base.gmailTrigger",
      "typeVersion": 1,
      "name": "Gmail Trigger",
      "credentials": {
        "googleGmailOAuth2Api": {
          "id": "gmail_cred_placeholder",
          "name": "Gmail OAuth2"
        }
      }
    },
    {
      "parameters": {
        "operation": "create",
        "pageId": "={{$env.NOTION_DB_TASKS}}",
        "propertiesUi": {
          "propertyFields": [
            {
              "key": "Name",
              "type": "title",
              "value": "={{$json.subject}}"
            },
            {
              "key": "From",
              "type": "rich_text",
              "value": "={{$json.from}}"
            },
            {
              "key": "Link",
              "type": "url",
              "value": "={{$json.threadUrl || ''}}"
            }
          ]
        }
      },
      "type": "n8n-nodes-base.notion",
      "typeVersion": 2,
      "name": "Create Task in Notion",
      "credentials": {
        "notionApi": {
          "id": "notion_cred_placeholder",
          "name": "Notion OAuth"
        }
      }
    }
  ],
  "connections": {
    "Gmail Trigger": {
      "main": [
        [
          {
            "node": "Create Task in Notion",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}