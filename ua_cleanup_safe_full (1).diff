+name: Cleanup Artifacts (manual)
+on:
+  workflow_dispatch:
+    inputs:
+      keep_days:
+        description: "Supprimer les artifacts plus vieux que N jours"
+        required: true
+        default: "7"
+jobs:
+  cleanup:
+    runs-on: ubuntu-latest
+    permissions:
+      actions: write
+    steps:
+      - name: Purge old artifacts via API
+        env:
+          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
+          REPO: ${{ github.repository }}
+          KEEP_DAYS: ${{ github.event.inputs.keep_days }}
+        run: |
+          set -euo pipefail
+          now=$(date -u +%s)
+          page=1
+          deleted=0
+          while true; do
+            resp=$(gh api -H "Accept: application/vnd.github+json" "repos/${REPO}/actions/artifacts?per_page=100&page=${page}")
+            count=$(echo "$resp" | jq '.artifacts | length')
+            [ "$count" -eq 0 ] && break
+            echo "$resp" | jq -c '.artifacts[]' | while read -r art; do
+              id=$(echo "$art" | jq -r '.id')
+              created=$(echo "$art" | jq -r '.created_at')
+              ts=$(date -u -d "$created" +%s)
+              age_days=$(( (now - ts) / 86400 ))
+              if [ "$age_days" -gt "$KEEP_DAYS" ]; then
+                gh api -X DELETE "repos/${REPO}/actions/artifacts/${id}" && echo "Deleted artifact ${id} (${age_days}d)"
+              fi
+            done
+            page=$((page+1))
+          done
+          echo "Cleanup completed."
+
