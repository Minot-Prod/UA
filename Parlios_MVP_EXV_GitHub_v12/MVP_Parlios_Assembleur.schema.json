{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Parlios MVP Assembleur — Étape 11 (auth)",
  "type": "object",
  "required": [
    "auth"
  ],
  "properties": {
    "auth": {
      "type": "object",
      "required": [
        "strategy",
        "cookie",
        "csrf",
        "routes"
      ],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": [
            "session_cookie"
          ]
        },
        "cookie": {
          "type": "object",
          "required": [
            "name",
            "path",
            "httpOnly",
            "secure",
            "sameSite",
            "maxAgeSeconds"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "httpOnly": {
              "type": "boolean"
            },
            "secure": {
              "type": "boolean"
            },
            "sameSite": {
              "type": "string",
              "enum": [
                "Lax",
                "Strict",
                "None"
              ]
            },
            "maxAgeSeconds": {
              "type": "integer",
              "minimum": 60
            }
          }
        },
        "csrf": {
          "type": "object",
          "required": [
            "enabled",
            "pattern",
            "cookie_name",
            "header_name"
          ],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "pattern": {
              "type": "string",
              "enum": [
                "double_submit"
              ]
            },
            "cookie_name": {
              "type": "string"
            },
            "header_name": {
              "type": "string"
            }
          }
        },
        "routes": {
          "type": "object",
          "required": [
            "login",
            "logout",
            "csrf",
            "me",
            "protectedPaths"
          ],
          "properties": {
            "login": {
              "type": "string"
            },
            "logout": {
              "type": "string"
            },
            "csrf": {
              "type": "string"
            },
            "me": {
              "type": "string"
            },
            "protectedPaths": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "demo_credentials": {
          "type": "object",
          "required": [
            "email",
            "password"
          ],
          "properties": {
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}