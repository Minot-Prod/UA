{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "slug",
    "version",
    "description",
    "interfaces",
    "routing",
    "policies"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "interfaces": {
      "type": "object"
    },
    "routing": {
      "type": "object"
    },
    "policies": {
      "type": "object"
    },
    "tests": {
      "type": "object"
    }
  }
}