{
  "name": "Automations Core",
  "slug": "automations-core",
  "version": "1.0.0",
  "owner_token": "{{OWNER}}",
  "sector": "Ops",
  "purpose": "Automations standardis√©es, monitoring et relance sur erreur.",
  "entrypoints": {
    "type": "prompt-agent",
    "routing_keywords": [
      "automations",
      "automations core"
    ],
    "triggers": [
      "ua://automations-core",
      "/agent automations-core",
      "call automations core"
    ]
  },
  "io_contract": {
    "inputs": [
      {
        "name": "context",
        "type": "object",
        "required": false,
        "desc": "Shared UA context/state."
      },
      {
        "name": "payload",
        "type": "object",
        "required": false,
        "desc": "Task-specific data."
      }
    ],
    "outputs": [
      {
        "name": "report",
        "type": "markdown",
        "desc": "Human-readable outcome and next steps."
      },
      {
        "name": "artifacts",
        "type": "list",
        "desc": "Files or structured results."
      },
      {
        "name": "logs",
        "type": "text",
        "desc": "Execution logs."
      }
    ]
  },
  "policies": {
    "base44": false,
    "login_first": true,
    "oauth_preferred": true,
    "safety": {
      "refuse_pii_exfiltration": true,
      "rate_limits": "respect external APIs"
    }
  },
  "capabilities": {
    "tools": [
      "web.run",
      "python_user_visible",
      "gmail.read",
      "gcal.read",
      "gcontacts.read"
    ],
    "integrations": [
      "GitHub",
      "n8n",
      "Slack/Email"
    ]
  },
  "tests": [
    {
      "id": "automations-core-handshake",
      "type": "handshake",
      "given": "UA routes 'hello' to Automations Core",
      "when": "agent starts",
      "then": "responds with its purpose and required inputs"
    },
    {
      "id": "automations-core-routing",
      "type": "routing",
      "given": "UA dispatches task to automations-core",
      "when": "agent completes",
      "then": "returns report+artifacts and updates registry"
    }
  ],
  "metadata": {
    "created": "2025-09-27",
    "labels": [
      "UA",
      "autodiscovery",
      "Ops"
    ],
    "kpis": [
      "latency_ms",
      "success_rate",
      "interop_score"
    ]
  }
}